<!-- 封装推荐歌单和热门歌单为组件 -->
<song-menu title="推荐歌单" moreText="更多" recommendSongList="{{recommendSongList}}" wx:if="{{recommendSongList.length && recommendSongs.length}}"></song-menu>
<song-menu title="热门歌单" moreText="更多" recommendSongList="{{hotSongList}}" wx:if="{{hotSongList.length &&recommendSongs.length}}"></song-menu>


<!-- 巅峰榜 -->
<view class="ranking-area" wx:if="{{hasData && recommendSongs.length}}">
  <view class="area-header">  
    <area-header title="巅峰榜" showMore="{{false}}" ></area-header>
  </view>
  <view class="ranking-list">
    <block wx:for="{{rankingInfos}}" wx:key="id">
      <view class="ranking-item">
        <ranking-item itemData="{{item}}" rankName="{{index}}"></ranking-item>
      </view>
    </block>
  </view>
</view>


<!-- 播放器 -->
<view class="placeholder" wx:if="{{songDetail[0].name}}"></view>
<view class="player-area" wx:if="{{songDetail[0].name}}" bindtap="onPlayerNavTap">
  <view class="player">
    <view class="info">
      <view class="avatar">
        <image 
          class="img" 
          src="{{songDetail[0].al.picUrl}}" mode="widthFix"
          style="animation-play-state: {{isPlay ? 'running' : 'paused'}}" 
        ></image>
      </view>
      <view class="name">{{songDetail[0].name}}</view>
    </view>
    <view class="control">
      <view class="play" catchtap="onPlayTap">
        <image class="img" src="/assets/images/music/main-{{isPlay ? 'play' : 'pause' }}.svg" 
        />
      </view>
      <view class="list">
        <image class="img" src="/assets/images/music/main-list.svg" mode="widthFix" />
      </view>
    </view>
  </view>
</view>
