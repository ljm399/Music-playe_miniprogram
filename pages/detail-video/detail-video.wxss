Page{
  height: 100vh;
}
video {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.content {
  padding: 20rpx;
  height: calc(100% - 150rpx);
}
.content .title {
  padding: 20rpx 0;
  font-size: 50rpx;
  font-weight: bold;
}
.content .related-content .item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}
.content .related-content .item .img {
  width: 30%;
  height: 150rpx;
}
.content .related-content .item .img image {
  width: 100%;
  height: 100%;
}

.content .related-content .item .info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  flex: 1;
}
.content .related-content .item .info .name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

