Page {
  background-color: #fafafa;
  box-sizing: border-box;
  padding: 20rpx;

  --search-background-color: #fff;
  --search-padding: 0;
  height: 100vh;
  position: relative;
}
.swiper {
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.swiper .swiper-item .swiper-img {
  width: 100%;
}

/* 推荐歌单 */
.recommend-list .recommend-item {
  padding-bottom: 20px;
}

/* 巅峰榜 */
.ranking-list .ranking-item {
  padding-bottom: 10px;
}


/* player */
.placeholder {
  height: 100rpx;
}
.player-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  z-index: 99;
  background-color: #fff;
  border-top: 1px solid #ccc;
}
.player-area .player {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.player-area .player .info {
  display: flex;
  /* align-items: center; */
  gap: 20rpx;
}

.player-area .player .info .avatar .img {
  position: relative;
  top: -30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  animation: imgRotate 5s linear infinite;
}

.player-area .player .info .name {
  line-height: 100rpx;
}


.player-area .player .control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.player-area .player .control .img{
  width: 50rpx;
  height: 50rpx;
  color: greenyellow;
}

@keyframes imgRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
  
}

