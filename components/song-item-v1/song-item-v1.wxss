.song-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.song-item .left {
  display: flex;
  gap: 20rpx;
}
.song-item .left .img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.song-item .left .img .img2 {
  width: 100%;
  height: 100%;
}

.song-item .left .text {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  color:#999;
  font-size: 26rpx;
}
.song-item .left .text .name {
  color:#000;
  font-size: 30rpx;
}

.song-item .right {
  color: #999;
}

