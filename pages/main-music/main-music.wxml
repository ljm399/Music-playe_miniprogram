<van-search
  placeholder="请输入搜索关键词"
  shape="round"
  background="#fafafa"
  bind:tap="onSearchFocus"
  disabled="true"
  wx:if="{{bannerList.length}}"
/>
<swiper 
  class="swiper" 
  indicator-dots="true" 
  style="height:{{swiperHeight}}px"
  >
  <block wx:for="{{bannerList}}" wx:key="targetId">
    <swiper-item class="swiper-item">
      <image 
        class="swiper-img" 
        src="{{item.pic}}" 
        mode="widthFix"
        bindload="onSwiperImgLoad"
      ></image>
    </swiper-item>
  </block>
</swiper>

<!-- 推荐歌曲 -->
<view class="recommend-area" wx:if="{{recommendSongs.length && bannerList.length}}">
  <view class="area-header">  
    <area-header title="推荐歌曲" moreText="更多" bind:moretap="onRecommendMoreTap"></area-header>
  </view>
  <view class="recommend-list">
    <block wx:for="{{recommendSongs}}" wx:key="id">
      <song-item-v1 songData="{{item}}" class="recommend-item" bind:tap="onSongV1Tap" data-index="{{index}}"></song-item-v1>
    </block>
  </view>
</view>

